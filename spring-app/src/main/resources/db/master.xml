<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

  <changeSet author="kharlacz" id="init-schema">
    <sqlFile dbms="mysql"
             path="/create-database.sql"
             relativeToChangelogFile="true"/>
  </changeSet>

  <changeSet author="kharlacz" id="load-data">
    <loadUpdateData file="/data/users.csv"
                    primaryKey="id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="user">
      <column name="id"/>
      <column name="email"/>
      <column name="password"/>
      <column name="username"/>
    </loadUpdateData>

    <loadUpdateData file="/data/banns.csv"
                    primaryKey="id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="ban">
      <column name="user_id"/>
      <column name="ban_from"/>
      <column name="ban_to"/>
      <column name="cause"/>
    </loadUpdateData>

    <loadUpdateData file="/data/units.csv"
                    primaryKey="id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="unit">
      <column name="id"/>
      <column name="name"/>
      <column name="abbreviation"/>
    </loadUpdateData>

    <loadUpdateData file="/data/recipes.csv"
                    primaryKey="id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="recipe">
      <column name="id"/>
      <column name="name"/>
      <column name="description"/>
      <column name="prep_method"/>
      <column name="author_id"/>
      <column name="rating"/>
      <column name="date_added"/>
      <column name="image"/>
    </loadUpdateData>

    <loadUpdateData file="/data/recipe_categories.csv"
                    primaryKey="id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="recipe_category">
      <column name="id"/>
      <column name="name"/>
    </loadUpdateData>

    <loadUpdateData file="/data/recipes_to_recipe_categories.csv"
                    primaryKey="recipe_id,recipe_category_id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="recipe_to_recipe_category">
      <column name="recipe_id"/>
      <column name="recipe_category_id"/>
    </loadUpdateData>

    <loadUpdateData file="/data/recipe_categories.csv"
                    primaryKey="id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="recipe_category">
      <column name="id"/>
      <column name="name"/>
    </loadUpdateData>

    <loadUpdateData file="/data/comments.csv"
                    primaryKey="id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="comment">
      <column name="id"/>
      <column name="user_id"/>
      <column name="recipe_id"/>
      <column name="date_added"/>
      <column name="content"/>
    </loadUpdateData>

    <loadUpdateData file="/data/ingredients.csv"
                    primaryKey="id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="ingredient">
      <column name="id"/>
      <column name="name"/>
      <column name="unit_id"/>
    </loadUpdateData>

    <loadUpdateData file="/data/recipes_to_ingredients.csv"
                    primaryKey="recipe_id,ingredient_id"
                    quotchar="'"
                    relativeToChangelogFile="true"
                    tableName="recipe_to_ingredient">
      <column name="recipe_id"/>
      <column name="ingredient_id"/>
      <column name="quantity"/>
    </loadUpdateData>
  </changeSet>

</databaseChangeLog>